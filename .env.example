# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql+asyncpg://scraper:scraper123@localhost:5432/webscraper
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Vector embedding configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=50

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIMEOUT=300

# ============================================
# S3/MINIO CONFIGURATION
# ============================================
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=web-scraper
S3_REGION=us-east-1
S3_USE_SSL=false

# ============================================
# SCRAPER CONFIGURATION
# ============================================
# Proxy configuration (tiered)
PROXY_TIER_1=http://proxy1.com:8080,http://proxy2.com:8080
PROXY_TIER_2=http://residential1.com:5000
PROXY_TIER_3=http://premium.com:9000

# Rate limiting
DEFAULT_DELAY_SECONDS=5
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# User agents rotation
USER_AGENT_ROTATION=true

# ============================================
# SCRAPER STRATEGIES
# ============================================
# Enable/disable specific scrapers
ENABLE_CRAWLEE=true
ENABLE_SELENIUM=true
ENABLE_SCRAPLING=true

# SeleniumBase UC Mode
SELENIUM_HEADLESS=true
SELENIUM_SOLVE_CAPTCHA=true

# Scrapling stealth
SCRAPLING_STEALTH=true
SCRAPLING_CLOUDFLARE_SOLVE=true

# ============================================
# KNOWLEDGE GRAPH CONFIGURATION
# ============================================
ENABLE_ENTITY_EXTRACTION=true
ENTITY_EXTRACTION_MODEL=en_core_web_sm
MIN_ENTITY_CONFIDENCE=0.7

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log
SENTRY_DSN=

# Prometheus metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=4

# Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_HYBRID_SEARCH=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_ADAPTIVE_SELECTORS=true
ENABLE_AUTO_RETRY=true
MAX_RETRY_ATTEMPTS=3
